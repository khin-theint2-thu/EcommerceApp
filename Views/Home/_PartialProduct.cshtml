
<!-- The Modal -->
<div class="modal fade" id="product_detail" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Product Detail</h5>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close" id="hide_btn">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-entry">
                        <input type="hidden" id="productid" />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="row my-2">
                                    <div class="col-md-3">
                                        <strong>Name*</strong>
                                    </div>
                                    <div class="col-md-9" id="productName">
                                        <input type="text" id="productname" class="form-control">
                                        <span id="namerr" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-md-3">
                                        <strong>Price</strong>
                                    </div>
                                    <div class="col-md-9" id="productPrice">
                                        <input type="number" id="price" class="form-control">
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-md-3">
                                        <strong>Description</strong>
                                    </div>
                                    <div class="col-md-9" id="productDescription">
                                        <textarea class="form-control" id="description" rows="5"></textarea>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-md-3">
                                        <strong>Select Photo</strong>
                                    </div>
                                    <div class="col-md-9" id="productDescription">
                                        <input type="file" name="fileInput" class="btn btn-light" id="fileInput" style="margin:-15px;"> <button type="button" class="btn btn-dark mt-2" id="upload_btn" onclick="uploadPhoto()">Upload</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <img src="" id="image" style="width: 100%;height: 60%;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="createProduct()">Save</button>
                </div>
        </div>        
    </div>
</div>
